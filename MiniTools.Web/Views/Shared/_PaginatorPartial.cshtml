@model PaginatorViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (Model == null) 
{
    return;
}

<nav aria-label="Page navigation">
    <ul class="pagination">

        @if (Model.pagerStart > Model.prevPage)
        {
            <li class="page-item">
                <a class="page-link" asp-area=@Model.AreaName asp-controller=@Model.ControllerName asp-action=@Model.ActionName asp-route-page="@Model.prevPage" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (var i = Model.pagerStart; i <= Model.pagerEnd; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "current" : string.Empty)">
                <a class="page-link" asp-area=@Model.AreaName asp-controller=@Model.ControllerName asp-action=@Model.ActionName asp-route-page="@i">
                    @i
                </a>
            </li>
        }


        @if (Model.pagerEnd < Model.nextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-area=@Model.AreaName asp-controller=@Model.ControllerName asp-action=@Model.ActionName asp-route-page="@Model.nextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        }

    </ul>


</nav>
@*[ Pages @Model.CurrentPage / @Model.TotalPages (record @Model.recordStart - @Model.recordEnd / @Model.TotalRecordCount) ]*@
